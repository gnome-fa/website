---
const { title, description, date, author } = Astro.props;

// تنظیم کردن نویسنده/نویسندگان
const authors = Array.isArray(author)
  ? author
  : [author].filter(Boolean);

const authorLabel = authors.length > 1 ? "نویسندگان" : "نویسنده";
---

<html lang="fa-IR">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
  </head>
  <body>
    <main class="post">
      <h1>{title}</h1>
      {description && <p class="desc">{description}</p>}

      <div class="meta">
        {authors.length > 0 && (
          <span>
            {" · "}
            {authorLabel}: {authors.join("، ")}
          </span>
        )}
      </div>

      <article class="content">
        <slot />
      </article>
    </main>
  </body>
</html>